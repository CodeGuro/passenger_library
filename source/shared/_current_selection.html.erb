<% disabled_selections ||= [] %>
<div id="current-selection">
  <p>Current selection: </p>
  <div>
    <% if !disabled_selections.include? :lang %>
      <img src="<%= url_for "/images/ruby.svg" %>" alt="Ruby">
      <%= render_partial('/shared/lang') %>
    <% end %>
    <% if !disabled_selections.include? :integration %>
      <img src="<%= url_for "/images/nginx.svg" %>" alt="Nginx">
      <%= render_partial('/shared/integration') %>
    <% end %>
  </div>
</div>
